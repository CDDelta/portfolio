<footer class="p-3 text-center">
  <a href="https://github.com/CDDelta/portfolio" target="_blank" rel="noopener">
    <small>Designed & built by me</small>
  </a>
  <div class="d-flex justify-content-center">
    {% for profileId, profile in about.socials %}
    <a
      class="p-2"
      href="{{ profile.url }}"
      title="{{ profile.name }}"
      aria-label="{{ profile.name }}"
      target="_none"
      rel="noopener"
    >
      <img src="media/svgs/{{ profileId }}.svg" alt="" height="30" width="30" />
    </a>
    {% endfor %}
  </div>
</footer>
